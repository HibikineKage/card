{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strictPropertyInitialization": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": "last 2 versions",
            "modules": false
          }
        ]
      ]
    },
    "babelCore": "@babel/core"
  }
}
